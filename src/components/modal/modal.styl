.modal-backdrop 
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	background-color rgba(0, 0, 0, 0.3)
	display flex
	justify-content center
	align-items center
.modal 
	background #ffffff
	-webkit-box-shadow 0px 0px 6px -1px rgba(107, 106, 107, 1)
	-moz-box-shadow 0px 0px 6px -1px rgba(107, 106, 107, 1)
	box-shadow 0px 0px 6px -1px rgba(107, 106, 107, 1)
	overflow-x auto
	display flex
	flex-direction column
	width 500px
	border-radius 3px
	padding 10px

.btn-close 
	border none
	color #e7e4e4
	cursor pointer
	background transparent
	padding 0
	outline none
	float: right 
